<section id="blog" class="content-section">
    <div class="section-content">
        <div class="tabs-content">
            <div class="wrapper">
                <ol class="posts">
                    <%= render 'shared/post_show' %>
                </ol>
            </div>
        </div>
    </div>    

    <div class="section-content">
        <div class="tabs-content">
            <div class="wrapper">
                <ul class="tabs clearfix" data-tabgroup="first-tab-group">
                    <li><a href="#tab1" class="active">July 2018</a></li>
                    <li><a href="#tab2">June 2018</a></li>
                    <li><a href="#tab3">May 2018</a></li>
                    <li><a href="#tab4">April 2018</a></li>
                </ul>   
                
                <% if @post.answers.any? %>
                    <h4>Number of answersã€€<%= @post.answers.count %> </h4>
                    <ol class="posts">
                        <%= render 'shared/answer' %>
                    </ol>
                <%= will_paginate @answers %>
                <% end %>
        
            </div>
        </div>
    </div>
</section>

